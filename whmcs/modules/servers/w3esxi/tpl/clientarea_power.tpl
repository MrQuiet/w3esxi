<div class="grid_5" style="direction:ltr;">
    <div class="module">
        <h3><span>Power<span></h3> 
        <div class="module-body"> 
            <a href="{W3E_POWER_ON_URL}" class="dashboard-module" onclick="return window.confirm(\'Do you want to power on VPS?\');">
            	<img src="{W3E_IMG_PATH}poweron.png" width="64" height="64" alt="power On (boot)" />
            	<span>Power ON</span>
            </a>
            
            <a href="{W3E_POWER_OFF_URL}" class="dashboard-module" onclick="return window.confirm(\'Do you want to power off VPS?\');">
            	<img src="{W3E_IMG_PATH}poweroff.png" width="64" height="64" alt="Power Off" />
            	<span>Power OFF</span>
            </a>
            
            <a href="{W3E_RESET_URL}" class="dashboard-module" onclick="return window.confirm(\'Do you want to reset VPS?\');">
            	<img src="{W3E_IMG_PATH}reset.png" width="64" height="64" alt="Reset" />
            	<span>Reset</span>
            </a>
            
    		<a href="{W3E_SHUTDOWN_URL}" class="dashboard-module" onclick="return window.confirm(\'Do you want to shutdown OS?\');">
            	<img src="{W3E_IMG_PATH}shutdown.png" width="64" height="64" alt="ShutDown (os)" />
            	<span>ShutDown (OS)</span>
            </a>
            
            <a href="{W3E_REBOOT_URL}" class="dashboard-module" onclick="return window.confirm(\'Do you want to reboot OS?\');">
            	<img src="{W3E_IMG_PATH}reboot.png" width="64" height="64" alt="Reboot (os)" />
            	<span>Reboot (OS)</span>
            </a>
        </div>
    </div>
</div>
